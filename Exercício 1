#include <stdio.h>

int main() {

    int inteiro = 10;
    float real = 3.14;
    char caractere = 'A';

    int *pontInteiro;
    float *pontReal;
    char *pontChar;

    pontInteiro = &inteiro;
    pontReal = &real;
    pontChar = &caractere;

    printf("Valores iniciais:\n");
    printf("Inteiro: %d\n", inteiro);
    printf("Real: %.2f\n", real);
    printf("Char: %c\n", caractere);

    *pontInteiro = 20;
    *pontReal = 6.28;
    *pontChar = 'B';

    printf("\nValores depois da modificacao:\n");
    printf("Inteiro: %d\n", inteiro);
    printf("Real: %.2f\n", real);
    printf("Char: %c\n", caractere);

    return 0;
}
