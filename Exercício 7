#include <stdio.h>

void calcularSoma(int *a, int b) {
    *a = *a + b;
}

int main() {

    int valorA, valorB;

    printf("Informe o valor de A: ");
    scanf("%d", &valorA);

    printf("Informe o valor de B: ");
    scanf("%d", &valorB);

    calcularSoma(&valorA, valorB);

    printf("Novo valor de A: %d\n", valorA);
    printf("Valor de B: %d\n", valorB);

    return 0;
}
